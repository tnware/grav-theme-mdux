{% set showcase_image = page.media.images | first %}

{% if showcase_image %}
    <div class="row card-panel" style="background-image: url({{ showcase_image.url }});">
        <div class="col">
        {% else %}
            <div class="row">
                <div class="col">
                {% endif %}
                {{ content }}
            </div>
        </div>
