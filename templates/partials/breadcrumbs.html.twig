{% set crumbs = breadcrumbs.get() %}
<nav class="nav-noshadow">
    <div class="nav-wrapper {{ config.themes.mdux.barcolor }}">
        {% if crumbs | length > 1 or config.plugins.breadcrumbs.show_all %}
            <div class="container">
                {% for crumb in crumbs %}
                    <a href="{{ crumb.url }}" class="breadcrumb">
                        {{ crumb.menu }}
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</nav>
