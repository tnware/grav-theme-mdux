<div class="row">
    <div class="card hoverable">
        <div class="card-image">
          {% set header_img = page.media['header.jpg'] %}
            {% if header_img %}
                {{ page.media['header.jpg'] }}
            {% else %}
            <div class="section {{ config.themes.mdux.navcolor }}"></div>
            {% endif %}
        </div>
        <div class="container">
            <span class="card-title">
                {% if page.header.link %}
                    <h4>
                        {% if page.header.continue_link is not sameas(false) %}
                            <a href="{{ page.url }}">
                                <i class="mdi mdi-chevron-double-right"></i>
                            </a>
                        {% endif %}
                        <a class="grey-text text-darken-2" href="{{ page.header.link }}">{{ page.title }}</a>
                    </h4>
                    <div class="divider"></div>
                {% else %}
                    <h4>
                        <a class="grey-text text-darken-2" href="{{ page.url }}">{{ page.title }}</a>
                    </h4>
                    <div class="divider"></div>
                {% endif %}
                <h5 class="grey-text text-lighten-1 shadow">
                    <i class="fa fa-calendar" aria-hidden="true"></i>
                    {{ page.date|date("F") }}
                    {{ page.date|date("d") }},
                    {{ page.date|date("Y") }}
                </h5>
            </span>
        </div>
        <div class="card-content">
                <p class="flow-text">{{ page.content|truncate(550) }}</p>
                {% set show_prev_next = true %}
        </div>
        <div class="card-action">
            {% if show_prev_next %}
                <p>
                    {% if not page.isFirst %}
                        <a class="btn waves-effect waves-light {{ config.themes.mdux.acccolor }}" href="{{ page.nextSibling.url }}">
                            <i class="mdi mdi-chevron-left left"></i>Next Post</a>
                    {% else %}
                        <a class="btn disabled">
                            <i class="mdi mdi-chevron-left left {{ config.themes.mdux.acccolor }}"></i>Next Post</a>
                    {% endif %}

                    {% if not page.isLast %}
                        <a class="btn previous waves-effect waves-light {{ config.themes.mdux.acccolor }}" href="{{ page.prevSibling.url }}">Previous Post<i class="mdi mdi-chevron-right right"></i>
                        </a>
                    {% else %}
                        <a class="btn previous disabled">Previous Post<i class="mdi mdi-chevron-right right"></i>
                        </a>
                    {% endif %}
                </p>
            {% endif %}
            <div class="row">
                <div class="col s12 m6 l6">
                    <span class="left-align">
                        <a href="{{ page.url }}">
                            <i class="fa fa-book" aria-hidden="true"></i>&nbsp;Continue Reading...</a>
                    </span>
                </div>
                {% if page.taxonomy.tag %}
                    <div class="col s12 m6 l6">
                        <span class="header-tags right-align">
                            {% for tag in page.taxonomy.tag %}
                                <a class="chip" href="{{ base_url }}/tag{{ config.system.param_sep }}{{ tag }}">{{ tag|upper }}</a>
                            {% endfor %}
                        </span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
